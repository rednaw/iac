# HTTP server block for registry
server {
    listen 80;
    listen [::]:80;
    server_name {{ domain_name }};
    
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;
    
    # Allow Let's Encrypt verification
    location /.well-known/acme-challenge {
        root /var/www/html;
        try_files $uri =404;
        access_log off;
        allow all;
    }
    
    # Redirect to HTTPS if certificates exist, otherwise serve content
{% if ssl_certs_exist | default(false) %}
    location / {
        return 301 https://$host$request_uri;
    }
{% else %}
    location / {
        try_files $uri $uri/ =404;
    }
{% endif %}
}

{# HTTPS server - only include if SSL certificates exist #}
{% if ssl_certs_exist | default(false) %}
# HTTPS server for registry
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ domain_name }};

    # SSL Configuration
    ssl_certificate /etc/letsencrypt/live/{{ cert_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ cert_domain }}/privkey.pem;

    # Modern SSL settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_stapling on;
    ssl_stapling_verify on;

    # Security Headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "same-origin" always;

    server_tokens off;

    # Basic Authentication
    auth_basic "Registry Realm";
    auth_basic_user_file /etc/docker-registry/auth/htpasswd;

    # Proxy settings for large image uploads
    client_max_body_size 0;
    proxy_request_buffering off;
    proxy_read_timeout 900s;
    proxy_send_timeout 900s;

    # Docker Registry API v2 endpoint
    # Docker clients expect /v2/ at the root
    # All Docker registry operations go through /v2/:
    #   - /v2/ (API version check)
    #   - /v2/<repo>/manifests/<tag> (image manifests)
    #   - /v2/<repo>/blobs/<digest> (image blobs)
    location /v2/ {
        auth_basic off; 
        proxy_pass http://127.0.0.1:5001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Original-URI $request_uri;
        
        # Disable buffering for streaming uploads
        # proxy_buffering off;
        # proxy_request_buffering off;
    }
}
{% endif %}
