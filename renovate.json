{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "branchPrefix": "renovate-bot/",
  "enabledManagers": [
    "github-actions",
    "dockerfile",
    "terraform",
    "ansible-galaxy",
    "pip_requirements",
    "custom.regex",
    "mise"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "mise.toml: tools not in Renovate's built-in mise short-name list (read package from # owner/repo comment)",
      "managerFilePatterns": ["mise.toml"],
      "matchStrings": ["(?<depName>\\w+)\\s*=\\s*\"(?<currentValue>[^\"]+)\"\\s*#\\s*(?<packageName>[^\\s\\n]+)"],
      "datasourceTemplate": "github-releases",
      "autoReplaceStringTemplate": "{{{depName}}} = \"{{{newValue}}}\"  # {{{packageName}}}"
    }
  ],
  "schedule": ["at any time"],
  "timezone": "Europe/Amsterdam",
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "prConcurrentLimit": 10,
  "branchConcurrentLimit": 10,
  "prHourlyLimit": 10,
  "automergeType": "pr",
  "ignoreTests": false,
  "packageRules": [
    {
      "description": "Automerge testing tools if they have successfully ran the tests",
      "groupName": "testing tools",
      "matchPackageNames": ["tfsec", "shellcheck", "ansible-lint", "PyYAML"],
      "automerge": true
    },
    {
      "description": "Automerge GitHub workflows when workflows pass",
      "groupName": "GitHub workflows",
      "matchManagers": ["github-actions"],
      "automerge": true
    }
  ]
}
